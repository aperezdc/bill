#! /usr/bin/env butt

use data/hash

test_hash_create ()
{
    local h1=$(hash_new)
    assertNotNull $h1

    local h2=$(hash_new)
    assertNotSame $h1 $h2
}


test_hash_empty_key ()
{
    local h=$(hash_new)
    hash_set $h "" value
    assertSame value $(hash_get $h "")
    hash_clear $h
    assertNull "$(hash_keys $h)"
}


test_hash_spaces_in_key ()
{
    local h=$(hash_new)
    hash_set $h ' ' 'empty key'
    assertSame 'empty key' "$(hash_get $h ' ')"
    hash_clear $h
}


test_hash_empty_value ()
{
    local h=$(hash_new)
    hash_set $h key ""
    hash_has $h key || fail "Key not stored"
    assertSame "" "$(hash_get $h key)"
    hash_clear $h
}


test_hash_empty_value_iter ()
{
    local h=$(hash_new)
    hash_set $h key1 ''
    hash_set $h key2 ''
    local k=( $(hash_keys_escaped $h) )
    assertSame 2 ${#k[@]}
    hash_clear $h
}


test_hash_set_one ()
{
    local h=$(hash_new)
    hash_set $h one 1
    assertSame $(hash_get $h one) 1
    hash_clear $h
}


test_hash_set_some ()
{
    local i h=$(hash_new)
    for i in $(seq 10) ; do
        hash_set $h "key$i" "$i"
    done
    for i in $(seq 10) ; do
        assertSame "$(hash_get $h "key$i")" "$i"
    done
    hash_clear $h
}


test_hash_clear ()
{
    local h=$(hash_new)
    hash_set $h one 1
    hash_set $h two 2
    assertNotNull "$(hash_keys $h)"
    hash_clear $h
    assertNull "$(hash_keys $h)"
}


test_hash_nest ()
{
    local h=$(hash_new)
    hash_set $h nested $(hash_new)
    hash_set $(hash_get $h nested) one 1
    assertSame $(hash_get $(hash_get $h nested) one) 1
    hash_clear $(hash_get $h nested)
    hash_clear $h
}



_test_hash_ref_helper ()
{
    hash_set $1 one 1
}


_test_hash_pass_ref ()
{
    local h=$(hash_new)
    _test_hash_pass_ref_helper $h
    assertSame $(hash_get $h one) 1
    hash_clear $h
}


test_hash_del ()
{
    local h=$(hash_new)
    hash_set $h one 1
    hash_set $h two 2
    hash_del $h one
    assertSame $(hash_keys $h) two
    assertSame $(hash_get $h two) 2
    hash_clear $h
}


_test_hash_iter_helper ()
{
    hash_iter_helper_keys=$2
}


test_hash_iter ()
{
    local i h=$(hash_new)
    local hash_iter_helper_keys

    hash_set $h one 1
    hash_keys_iter $h _test_hash_iter_helper
    assertSame one "$hash_iter_helper_keys"
    hash_clear $h
}


test_hash_iter2 ()
{
    local h=$(hash_new)
    hash_set $h k1 v1
    hash_set $h k2 v2
    hash_set $h k3 v3
    local k=( $(hash_keys $h) )
    assertSame 3 "${#k[@]}"
    hash_clear $h
}


test_hash_iter3 ()
{
    local h=$(hash_new)
    hash_set $h k1 v1
    hash_set $h k2 v2
    hash_set $h k3 v3
    hash_set $h '' ve
    local k=( $(hash_keys_escaped $h) )
    assertSame 4 "${#k[@]}"
    hash_clear $h
}


test_hash_has ()
{
    local h=$(hash_new)

    hash_set $h one 1
    hash_set $h two 2
    hash_has $h one || fail "key not in hashtable"
    hash_clear $h
}


test_hash_colon_in_value ()
{
    local h=$(hash_new)

    hash_set $h key 'http://www.igalia.com'
    assertSame 'http://www.igalia.com' "$(hash_get $h key)"
    hash_clear $h
}


test_hash_set_twice ()
{
    local h=$(hash_new)

    hash_set $h k v1
    assertSame v1 $(hash_get $h k)
    hash_set $h k v2
    assertSame v2 $(hash_get $h k)
    hash_clear $h
}
